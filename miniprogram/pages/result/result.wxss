/* 主容器 */
.container {
  background: linear-gradient(180deg, #e6f7ff 0%, #ffffff 100%);
  min-height: 100vh;
  padding-bottom: 200rpx;
}

/* 顶部导航 */
.header {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx 30rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  background: none;
  border: none;
  padding: 10rpx;
  margin-right: 20rpx;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 评分概览区 */
.score-overview {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  background: rgba(255, 255, 255, 0.8);
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.score-circle {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.circle-progress {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.circle-inner {
  width: 160rpx;
  height: 160rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: inset 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.score-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  line-height: 1;
}

.score-unit {
  font-size: 24rpx;
  color: #666;
  margin-top: 5rpx;
}

.score-info {
  text-align: center;
}

.score-level {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.score-desc {
  font-size: 28rpx;
  color: #666;
}

/* 三维指标区域 */
.metrics-section {
  padding: 0 20rpx;
}

.metric-card {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.metric-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.metric-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.metric-score {
  font-size: 28rpx;
  color: #1890ff;
  font-weight: bold;
}

/* 图表容器 */
.chart-container {
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}

/* 统计数据 */
.metric-stats {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 5rpx;
}

.stat-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 节奏热力图 */
.rhythm-heatmap {
  margin-bottom: 20rpx;
}

.heatmap-grid {
  display: grid;
  grid-template-columns: repeat(10, 1fr);
  grid-template-rows: repeat(8, 1fr);
  gap: 2rpx;
  width: 100%;
  height: 200rpx;
}

.heatmap-cell {
  border-radius: 2rpx;
  min-height: 20rpx;
}

/* 咬字雷达图 */
.articulation-radar {
  margin-bottom: 20rpx;
}

.radar-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.radar-label {
  width: 160rpx;
  font-size: 26rpx;
  color: #333;
}

.radar-bar {
  flex: 1;
  height: 20rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  margin: 0 20rpx;
  overflow: hidden;
}

.radar-fill {
  height: 100%;
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.radar-value {
  width: 80rpx;
  font-size: 24rpx;
  color: #666;
  text-align: right;
}

/* 训练建议区域 */
.suggestions-section {
  padding: 0 20rpx;
  margin-top: 40rpx;
}

.section-title {
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.suggestions-list {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item.high {
  border-left: 4rpx solid #e64340;
}

.suggestion-item.medium {
  border-left: 4rpx solid #ff9500;
}

.suggestion-item.low {
  border-left: 4rpx solid #07C160;
}

.suggestion-icon {
  margin-right: 20rpx;
  padding-top: 5rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.suggestion-content {
  flex: 1;
}

.suggestion-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.suggestion-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 底部占位 */
.bottom-placeholder {
  height: 40rpx;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-top: 1rpx solid #f0f0f0;
  z-index: 1000;
}

.retest-btn {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #1890ff;
  background: white;
  color: #1890ff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 40rpx;
  margin-right: 20rpx;
  transition: all 0.3s ease;
}

.retest-btn:active {
  background: rgba(24, 144, 255, 0.1);
  transform: scale(0.98);
}

.save-btn {
  flex: 1;
  height: 80rpx;
  border: none;
  background: #07C160;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 40rpx;
  transition: all 0.3s ease;
}

.save-btn:active {
  background: #06ad56;
  transform: scale(0.98);
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .header {
    padding: 30rpx 20rpx 25rpx;
  }
  
  .header-title {
    font-size: 32rpx;
  }
  
  .score-overview {
    margin: 15rpx;
    padding: 40rpx 30rpx;
  }
  
  .metric-card {
    margin: 0 0 15rpx 0;
    padding: 25rpx;
  }
  
  .suggestions-section {
    padding: 0 15rpx;
  }
  
  .action-buttons {
    padding: 20rpx;
  }
}

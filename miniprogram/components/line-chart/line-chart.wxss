/* components/line-chart/line-chart.wxss */

.line-chart-container {
  width: 100%;
  height: 300rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  position: relative;
}

.chart-canvas {
  width: 100%;
  height: 100%;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .line-chart-container {
    border-radius: 12rpx;
  }
}
